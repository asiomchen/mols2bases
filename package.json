{
  "name": "mols2bases",
  "version": "0.1.0",
  "description": "Molecule visualization for Bases",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "node esbuild.config.mjs production",
    "lint": "eslint src/",
    "lint:fix": "eslint --fix src/",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@rdkit/rdkit": "2025.3.4-1.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.11.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-obsidianmd": "^0.1.9",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "obsidian": "^1.8.7",
    "prettier": "^3.8.1",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.55.0"
  }
}
